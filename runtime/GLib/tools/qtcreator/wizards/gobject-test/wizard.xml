Custom class wizard example configuration file. -->
	<wizard version="1" kind="class" id="C.GObject" category="B.CustomClasses">
    <description>Creates a GObject TestSuite.</description>
	<icon>console.png</icon>
	<description xml:lang="de">Erzeugt eine Implementierung von GObject.</description>
    <displayname>GObject test</displayname>;
		<displayname xml:lang="de">Implementierung von GObject</displayname>;
    <displaycategory>GObject Test</displaycategory>
    <displaycategory xml:lang="de">Benutzerdefinierte Klassen</displaycategory>
    <!--files>
		<file source="gobject.c" target="%ClassName:l%.c" openeditor="true"/>
		<file source="gobject.h" target="%ClassName:l%.h" openeditor="true"/>
    </files-->
    <!-- Create parameter wizard page -->
	<fieldpagetitle>GObject parameters</fieldpagetitle>
	<fieldpagetitle xml:lang="de">Parameter des GObject</fieldpagetitle>
    <fields>
		<field name="Preffix">
			<fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="Gtk" />
			<fielddescription>Prefix :</fielddescription>
		</field>
		<field name="Name">
			<fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="NewType" />
			<fielddescription>Name :</fielddescription>
            		<fielddescription xml:lang="de">Klassenname:</fielddescription>
        	</field>

		<field name="GtkVersion">
            		<fieldcontrol class="QComboBox" defaultindex="0">
				<comboentries>
					<comboentry value="3">
						<comboentrytext>3.x</comboentrytext>
					</comboentry>
				</comboentries>
			</fieldcontrol>
			<fielddescription>The Gtk version :</fielddescription>
			<fielddescription xml:lang="de">Datentyp :</fielddescription>
		</field>
		<field name="Licence">
            		<fieldcontrol class="QComboBox" defaultindex="0">
				<comboentries>
					<comboentry value="gpl">
						<comboentrytext>Gpl</comboentrytext>
					</comboentry>
				</comboentries>
			</fieldcontrol>
			<fielddescription>The licence :</fielddescription>
			<fielddescription xml:lang="de">Licence :</fielddescription>
		</field>
		<field name="UsePreffix">
			<fieldcontrol class="QCheckBox" truevalue="1" falsevalue="0" />
			<fielddescription>Filename preffixed :</fielddescription>
            		<fielddescription xml:lang="de">Klassenprivata:</fielddescription>
        	</field>
    </fields>

    <!-- Example of a validation rule -->
    <validationrules>
        <validationrule condition='"%Name%" != "QAbstractListModel"'>
            <message>%ClassName% cannot be used as class name.</message>
            <message xml:lang="de">%ClassName% kann nicht als Klassenname verwendet werden.</message>
        </validationrule>
    </validationrules>
	<!-- Specify the generator script -->
	<generatorscript binary="generate.pl">
		<argument value="--project-name=%ProjectName%"/>
		<argument value="--class-name-preffix=%Preffix%"/>
		<argument value="--class-name-suffix=%Name%"/>
		<argument value="--licence=%Licence%"/>
		<argument value="--use-preffix=%UsePreffix%"/>
	</generatorscript>
</wizard>
